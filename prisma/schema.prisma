datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    String  @id @default(cuid())
  email String  @unique
  name  String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  password Password?

  groups              UsersInGroups[]
  scores              Score[]
  choosenLunches      Lunch[]
  discoveredLocations GroupLocation[]
}

model Password {
  hash String

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId String @unique
}

model Group {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users     UsersInGroups[]
  locations GroupLocation[]
}

model UsersInGroups {
  user   User   @relation(fields: [userId], references: [id])
  userId String

  group   Group  @relation(fields: [groupId], references: [id])
  groupId String

  role String @default("USER")

  joinedAt DateTime @default(now())

  @@id([userId, groupId])
}

model GroupLocation {
  group   Group  @relation(fields: [groupId], references: [id])
  groupId String

  location   Location @relation(fields: [locationId], references: [id])
  locationId String

  lunches Lunch[]

  discoveredBy   User   @relation(fields: [discoveredById], references: [id])
  discoveredById String

  @@id([locationId, groupId])
}

model Location {
  id      String @id @default(cuid())
  name    String
  lon     String
  lat     String
  address String

  groupLocation GroupLocation[]
}

model Lunch {
  id   String   @id @default(cuid())
  date DateTime

  scores Score[]

  location        GroupLocation @relation(fields: [locationId, locationGroupId], references: [locationId, groupId])
  locationId      String
  locationGroupId String

  choosenBy User   @relation(fields: [userId], references: [id])
  userId    String
}

model Score {
  id    String @id @default(cuid())
  score Int

  user   User   @relation(fields: [userId], references: [id])
  userId String

  lunch   Lunch  @relation(fields: [lunchId], references: [id])
  lunchId String

  comment String?
}
